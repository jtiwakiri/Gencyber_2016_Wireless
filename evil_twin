#! /bin/bash
# /etc/init.d/evil_twin

### BEGIN INIT INFO
# Provides: evil_twin
# Required-Start: $remote_fs $syslog
# Required-Stop: $remote_fs $syslog
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: Run evil twin at boot.
# Description: Run evil twin at boot.
### END INIT INFO

case "$1" in
  start)
    cd /home/pi/Desktop/Evil_Twin/
    ./run_twin.sh
    ;;
  stop)
    # ?
    ;;
  *)
    echo "Usage: /etc/init.d/blah {start|stop}"
    exit 1
    ;;
esac

exit 0
